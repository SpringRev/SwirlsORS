@using BootstrapMVC.Helpers
@model List<BootstrapMVC.Controllers.TreeViewLocation>

<h2>TreeView</h2>


@(Html.TreeView(Model)
    .EmptyContent("No posts have been posted yet on this title")
    .Children(m => m.ChildLocations)
    .HtmlAttributes(new { id = "tree" })
    .ChildrenHtmlAttributes(new { @class = "subItem" })
    .ItemText(m => m.Name)
    .ItemTemplate(
        @<text>
            <a href="#@item.Id">@item.Name</a>
        </text>)
)

